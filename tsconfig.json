{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./src/compile",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": false, // Disable unused parameters warning
    "noUnusedLocals": false // Disable unused locals warning
  },
  "include": [
    "src/**/*.ts"
  ]
}
